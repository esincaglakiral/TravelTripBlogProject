<div class="content-form">
    <h3>Bir Yorum Yapınız:</h3>
    <form method="post">
        <input type="hidden" name="Blogid" value="@ViewBag.deger" /> <!-- Eğer Blogid değerini view üzerinden alıyorsanız -->
        <input type="text" placeholder="Kullanıcı Adı" name="KullaniciAdi" required />
        <input type="text" placeholder="Mail Adresi" name="Mail" required />
        <textarea placeholder="Yorum" name="Yorum" required></textarea>
        <input type="submit" value="Gönder" />
    </form>
</div>
